<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.abubakr.hangman.MainActivity"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:contentDescription=""
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        android:layout_marginTop="5dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hangman"
        android:textColor="@color/tittelFarge"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnRegler"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/btnSprak"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:background="@color/tittelFarge"
        android:onClick="Sprak"
        android:text="SprÃ¥k"
        android:textColor="@color/windowBackground"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnStatistikk"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnStatistikk"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/btnStatistikk"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:background="@color/tittelFarge"
        android:onClick="Stat"
        android:text="Statistikk"
        android:textColor="@color/windowBackground"
        android:textSize="14sp"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btnSprak"
        app:layout_constraintLeft_toRightOf="@+id/btnRegler"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="44dp" />

    <Button
        android:id="@+id/btnSpill"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:background="@color/tittelFarge"
        android:forceHasOverlappingRendering="false"
        android:onClick="Spill"
        android:text="Spill"
        android:textColor="@color/windowBackground"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btnRegler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnRegler"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/btnRegler"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:background="@color/tittelFarge"
        android:onClick="Regler"
        android:text="Regler"
        android:textColor="@color/windowBackground"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btnStatistikk"
        app:layout_constraintLeft_toRightOf="@+id/btnSpill"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnStatistikk"
        tools:layout_constraintBaseline_creator="1" />

</android.support.constraint.ConstraintLayout>